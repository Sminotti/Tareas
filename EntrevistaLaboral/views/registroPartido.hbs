<div class="container mt-5">
    <div class="row justify-content-center h-100 align-items-center">
        <div class="col-4">
            <div class="card text-white bg-dark mb-3" style="max-width: 50rem;">
                <div class="card-header" style="border-color: aliceblue;">Ingroso de partido</div>
                <div class="card-body">
                    <h5 class="card-title">Nueva fecha</h5>
                    <form method="post" action="/registro/create">
                        <div class="form-group">
                            <input type="text" name="rival" class="form-control" placeholder="Rival">
                        </div>
                        <div class="form-group">
                            <input type="numbre" name="golesRecibidos" class="form-control" placeholder="Goles Recibidos">
                        </div>
                        <div class="form-group">
                            <input type="text" name="estadio" class="form-control" placeholder="estadio">
                        </div>
                        <div class="form-group">
                            <input type="text" name="figuraPartido" class="form-control" placeholder="figuraPartido">
                        </div>
                        <button type="submit" class="btn btn-primary btn-block">Guardar</button>
                    </form>
                    <span>{{message}}</span>
                </div>
            </div>
        </div>
    </div>
</div>